<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ========== FIX: Package Visibility (Android 11/API 30+) ========== -->
    <!-- 外部のアプリ (Google Maps) を照会できるように、<queries> を追加します。 -->
    <queries>
        <!-- Google Maps アプリ (com.google.android.apps.maps) を照会できるようにします -->
        <package android:name="com.google.android.apps.maps" />

        <!-- 一般的な GEO スキームのインテントを処理するアプリを問い合わせることを許可します -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="geo" />
        </intent>
    </queries>
    <!-- ================================================================= -->

    <!-- Webアクセス（検索機能）のためにインターネット権限を追加します -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- ========== FIX: 位置情報アクセス権限の追加（天気予報機能に必須） ========== -->
    <!-- 精度の高いGPSに基づく位置情報へのアクセスを許可します -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- ネットワーク（Wi-Fi, 基地局）に基づく位置情報へのアクセスを許可します -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- ========================================================================= -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nt2">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>