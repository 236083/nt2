<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8FC"
    tools:context=".ProfileFragment">

    <!-- ============================================== -->
    <!-- 1. ヘッダーエリア -->
    <!-- ============================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#2E2E2E"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- アプリロゴ (中央配置) -->
        <ImageView
            android:id="@+id/app_logo_image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/applog2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/applog2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ============================================== -->
    <!-- 2. プロフィール情報（アバターと名前）ブロック -->
    <!-- ============================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="20dp"
        android:background="@drawable/card_block_background"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ユーザーアバター -->
        <ImageView
            android:id="@+id/image_user_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="User Avatar"
            android:src="@drawable/outline_account_circle_24"
            android:tint="#4A4A4A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="ファッション太郎"
            android:textColor="@android:color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/image_user_avatar"
            app:layout_constraintTop_toTopOf="@id/image_user_avatar" />

        <!-- ユーザーID/ステータス -->
        <TextView
            android:id="@+id/text_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="＠Tarou_Fash"
            android:textColor="#6A6A6A"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/image_user_avatar"
            app:layout_constraintTop_toBottomOf="@id/text_user_name"
            app:layout_constraintVertical_bias="0.235" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ============================================== -->
    <!-- 3. メニューセクション (LinearLayoutでリストを表現) -->
    <!-- ============================================== -->
    <LinearLayout
        android:id="@+id/menu_section_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:background="@drawable/card_block_background"
        app:layout_constraintTop_toBottomOf="@id/profile_info_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- プロフィール設定 (ID: menu_my_profile) -->
        <TextView
            android:id="@+id/menu_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="プロフィール設定"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:drawablePadding="16dp"
            android:background="?attr/selectableItemBackground" />

        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#E0E0E0" />

        <!-- アカウント設定 -->
        <TextView
            android:id="@+id/menu_pass_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="パスワード設定"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:drawableEnd="@drawable/baseline_chevron_right_24"
            android:drawablePadding="16dp"
            android:background="?attr/selectableItemBackground" />

        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#E0E0E0" />

    </LinearLayout>

    <!-- ============================================== -->
    <!-- 4. ログアウトボタン (ID: btn_logout) -->
    <!-- ============================================== -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FF5252"
        android:text="ログアウト"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_section_layout"
        app:layout_constraintVertical_bias="0.358" />

</androidx.constraintlayout.widget.ConstraintLayout>