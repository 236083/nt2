<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8FC"
    tools:context=".ProfiSetting">

    <!-- ============================================== -->
    <!-- 1. ヘッダーエリア -->
    <!-- ============================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#4A4A4A"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 戻るボタン -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Back Button" />

        <!-- 画面タイトル -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="プロフィール設定"
            android:textColor="#C8C8C8"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ============================================== -->
    <!-- 2. 入力フォームエリア (ScrollViewで囲む) -->
    <!-- ============================================== -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ConstraintLayoutのheightをwrap_contentにすることで、内容に応じて縦に広がり、ScrollViewが可能になる -->
        <!-- **** 変更点: paddingBottom を 120dp に増やし、下部メニューに隠れないようにしました **** -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="120dp">

            <!-- 氏名タイトル -->
            <TextView
                android:id="@+id/label_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="氏名"
                android:textSize="16sp"
                android:textColor="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 姓 (氏名) 入力フィールド -->
            <EditText
                android:id="@+id/edit_last_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="姓"
                android:inputType="textPersonName"
                android:background="@drawable/search_bar_background_inner"
                app:layout_constraintTop_toBottomOf="@id/label_name_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edit_first_name"/>

            <!-- 名 (氏名) 入力フィールド -->
            <EditText
                android:id="@+id/edit_first_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="名"
                android:inputType="textPersonName"
                android:background="@drawable/search_bar_background_inner"
                app:layout_constraintTop_toBottomOf="@id/label_name_title"
                app:layout_constraintStart_toEndOf="@id/edit_last_name"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ニックネーム -->
            <TextView
                android:id="@+id/label_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="ニックネーム"
                android:textSize="16sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@id/edit_last_name"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/edit_nickname"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="アプリで表示される名前"
                android:inputType="text"
                android:background="@drawable/search_bar_background_inner"
                app:layout_constraintTop_toBottomOf="@id/label_nickname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 生年月日 -->
            <TextView
                android:id="@+id/label_birthdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="生年月日"
                android:textSize="16sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@id/edit_nickname"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_birthdate_value"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:text="タップして選択"
                android:textSize="16sp"
                android:textColor="#9E9E9E"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/search_bar_background_inner"
                android:drawableEnd="@drawable/outline_calendar_today_24"
                app:layout_constraintTop_toBottomOf="@id/label_birthdate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 性別 -->
            <TextView
                android:id="@+id/label_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="性別"
                android:textSize="16sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@id/text_birthdate_value"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioGroup
                android:id="@+id/radio_group_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/label_gender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男性"
                    android:layout_marginEnd="16dp"/>
                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女性"
                    android:layout_marginEnd="16dp"/>
                <RadioButton
                    android:id="@+id/radio_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="その他"/>
            </RadioGroup>

            <!-- 身長 -->
            <TextView
                android:id="@+id/label_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="身長 (cm)"
                android:textSize="16sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@id/radio_group_gender"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/edit_height"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="例: 170"
                android:inputType="numberDecimal"
                android:background="@drawable/search_bar_background_inner"
                app:layout_constraintTop_toBottomOf="@id/label_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 体重 -->
            <TextView
                android:id="@+id/label_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="体重 (kg)"
                android:textSize="16sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@id/edit_height"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/edit_weight"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="例: 65.5"
                android:inputType="numberDecimal"
                android:background="@drawable/search_bar_background_inner"
                app:layout_constraintTop_toBottomOf="@id/label_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- ============================================== -->
            <!-- 3. 保存ボタン -->
            <!-- ============================================== -->
            <Button
                android:id="@+id/btn_save_profile"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="32dp"
                android:text="プロフィールを保存"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#007BFF"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/edit_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" /> <!-- ここがScrollViewの最下部に制約されています -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>