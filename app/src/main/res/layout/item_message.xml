<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/image_view_avatar_ai"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/gemini_generated_image_ih9xhfih9xhfih9x"
        android:contentDescription="AI アバター"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_message_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:maxWidth="280dp" android:background="@drawable/chat_bubble_ai"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/image_view_avatar_ai"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="AIからの返信メッセージの例。AIのメッセージは左側に表示されます。" />

    <TextView
        android:id="@+id/text_view_timestamp_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        android:textColor="#999999"
        android:text="12:00"
        app:layout_constraintStart_toEndOf="@id/text_view_message_ai"
        app:layout_constraintBottom_toBottomOf="@id/text_view_message_ai"
        app:layout_constraintTop_toTopOf="@id/text_view_message_ai"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>