<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".SearchFragment">

    <!-- 1. ヘッダーエリア -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#2E2E2E"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- アプリロゴ (中央配置) -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. 検索ボタンエリア (スクロールビューで内包) -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="36dp"
            android:paddingBottom="130dp"
            android:gravity="center_horizontal">

            <!-- ***** 天気予報カードエリア ***** -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFF"
                    android:backgroundTint="#42A5F5"
                    android:orientation="vertical"
                    android:padding="20dp"> <!-- 青系の背景 -->

                    <!-- 天気概要 (アイコンと気温) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weather_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="現在地 (データを取得中...)"
                            android:textColor="#E3F2FD"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/weather_condition"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="読み込み中"
                            android:textColor="#E3F2FD"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <!-- 気温とアイコン -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/weather_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="Weather Icon"
                            android:src="@drawable/baseline_cloud_24"
                            android:tint="@android:color/white"
                            tools:src="@drawable/baseline_cloud_24" />

                        <TextView
                            android:id="@+id/weather_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--°C"
                            android:textColor="@android:color/white"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            tools:text="18°C" />
                    </LinearLayout>

                    <!-- レコメンデーション -->
                    <TextView
                        android:id="@+id/weather_recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="#1976D2"
                        android:paddingStart="12dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="8dp"
                        android:text="天気予報を取得しています..."
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- ***** 天気予報カードエリア 終了 ***** -->


            <!-- タイトル: カテゴリ検索 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="店舗検索"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:id="@+id/category_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:weightSum="3"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_store_clothes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#009688"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/icon_clothes"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/outline_store_24"
                            android:tint="@android:color/white"
                            android:contentDescription="Store Icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服屋"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_store_hair_salon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#28A745"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/icon_hair_salon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/_3549"
                            android:tint="@android:color/white"
                            android:contentDescription="Hair Salon Icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美容院"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_store_accessories"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFCC80"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/icon_accessories"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/_3695"
                            android:tint="#333333"
                            android:contentDescription="Accessories Icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="雑貨店"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- タイトル: 特定店舗検索 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="特定ブランド・店舗を探す"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="24dp"/>

            <!-- ****** 特定ブランドボタン群 ****** -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ▼ 1行目：UNIQLO / GU / ZARA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:weightSum="3"
                    android:layout_marginBottom="16dp">

                    <!-- UNIQLO -->
                    <LinearLayout
                        android:id="@+id/layout_brand_uniqlo"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/outline_checkroom_24"
                            android:tint="#FFFFFF"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#FF3B30"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ユニクロ"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- GU -->
                    <LinearLayout
                        android:id="@+id/layout_brand_gu"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/outline_checkroom_24"
                            android:tint="#FFFFFF"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#6C757D"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GU"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- ZARA -->
                    <LinearLayout
                        android:id="@+id/layout_brand_zara"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/outline_checkroom_24"
                            android:tint="#FFFFFF"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#1A1A1A"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ZARA"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                </LinearLayout>


                <!-- ▼ 2行目：H&M / BEAMS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:weightSum="3"
                    android:layout_marginBottom="24dp">

                    <!-- H&M -->
                    <LinearLayout
                        android:id="@+id/layout_brand_hm"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/outline_checkroom_24"
                            android:tint="#FFFFFF"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#6F42C1"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="H＆M"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- BEAMS -->
                    <LinearLayout
                        android:id="@+id/layout_brand_beams"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/outline_checkroom_24"
                            android:tint="#FFFFFF"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#FFD740"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BEAMS"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                </LinearLayout>


                <!-- ▼ 3行目：Ash / TBC -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="美容・エステブランド"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:weightSum="3"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:id="@+id/layout_brand_ash"
                        android:layout_width="0dp"
                        android:layout_height="65dp"  android:layout_weight="1"
                        android:orientation="horizontal"  android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="40dp"  android:layout_height="40dp"
                            android:src="@drawable/_3549"
                            android:tint="#FFFFFF"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#6F42C1"
                            android:padding="8dp"
                            android:contentDescription="Ash Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ash"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_brand_tbc"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"  android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="40dp"  android:layout_height="40dp"
                            android:src="@drawable/_3549"
                            android:tint="#FFFFFF"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#E83E8C"
                            android:padding="8dp"
                            android:contentDescription="TBC Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TBC"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                </LinearLayout>

                <!-- ▼ 4行目：LOFT / MUJI -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="服飾雑貨・生活雑貨ブランド"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/layout_brand_loft"
                        android:layout_width="0dp"
                        android:layout_height="65dp"  android:layout_weight="1"
                        android:orientation="horizontal"  android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="40dp"  android:layout_height="40dp"
                            android:src="@drawable/_3695"
                            android:tint="#333333"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#20C997"
                            android:padding="8dp"
                            android:contentDescription="LOFT Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOFT"
                            android:textSize="12sp"  android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_brand_muji"
                        android:layout_width="0dp"
                        android:layout_height="65dp"  android:layout_weight="1"
                        android:orientation="horizontal"  android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/rounded_background"
                        android:backgroundTint="@android:color/white"
                        android:elevation="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="40dp"  android:layout_height="40dp"
                            android:src="@drawable/_3695"
                            android:tint="#FFFFFF"
                            android:background="@drawable/card_block_background"
                            android:backgroundTint="#795548"
                            android:padding="8dp"
                            android:contentDescription="MUJI Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MUJI"
                            android:textSize="12sp"  android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>

                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>
            <!-- ****** 特定ブランドボタン群 終了 ****** -->



        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>