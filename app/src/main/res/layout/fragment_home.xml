<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAF8FC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_container"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="#2E2E2E"
            android:elevation="8dp"
            android:paddingBottom="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/app_logo_image"
                android:layout_width="104dp"
                android:layout_height="53dp"
                android:adjustViewBounds="true"
                android:contentDescription="App Logo"
                android:scaleType="fitCenter"
                android:src="@drawable/applog2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.452"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.505"
                tools:src="@drawable/applog2" />

            <ImageButton
                android:id="@+id/camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Camera Button"
                android:padding="8dp"
                android:src="@drawable/baseline_add_a_photo_24"
                app:layout_constraintBottom_toBottomOf="@id/app_logo_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.908"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/app_logo_image"
                app:tint="@android:color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_block_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/card_block_background"
            android:elevation="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_container">

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="254dp"
                android:layout_height="51dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/search_bar_background_inner"
                android:drawableEnd="@drawable/outline_cancel_24"
                android:drawablePadding="8dp"
                android:hint="Tシャツ、パンツ など"
                android:imeOptions="actionSearch"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.081" />

            <ImageButton
                android:id="@+id/button_filter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="絞り込みボタン"
                android:scaleType="fitCenter"
                android:src="@drawable/shibori511_s_f"
                app:layout_constraintBottom_toBottomOf="@+id/edit_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.951"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_search"
                app:layout_constraintVertical_bias="0.583" />

            <HorizontalScrollView
                android:id="@+id/scroll_brands"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_search">

                <LinearLayout
                    android:id="@+id/layout_brands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"  android:paddingEnd="16dp">   <TextView
                    android:id="@+id/text_brand_gu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:text="GU"
                    android:textSize="14sp" />
                    <TextView
                        android:id="@+id/text_brand_uniqlo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:text="ユニクロ"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_brand_amazon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:text="Amazon"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_brand_zozo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp" android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:text="ZOZO"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_brand_rakuten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:text="楽天"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/text_brand_grl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:text="GRL"
                        android:textSize="14sp" />

                </LinearLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_gallery_block_container"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/card_block_background"
            android:padding="16dp"
            app:layout_constraintEnd_toStartOf="@+id/point_container"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_block_container">
            <ImageButton
                android:id="@+id/button_my_gallery"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="クローゼットボタン"
                android:src="@drawable/outline_checkroom_24"
                app:layout_constraintBottom_toTopOf="@+id/text_gallery_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/text_gallery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="クローゼット"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_my_gallery"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/point_container"
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/card_block_background"
            android:elevation="4dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/my_gallery_block_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/my_gallery_block_container"
            app:layout_constraintTop_toTopOf="@+id/my_gallery_block_container">

            <TextView
                android:id="@+id/text_point_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保有ポイント"
                android:textColor="#757575"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_point_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_point_label">

                <TextView
                    android:id="@+id/text_point_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,250"
                    android:textColor="#FF9800"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="pt"
                    android:textColor="#FF9800"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_point_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="詳細を確認 〉"
                android:textColor="#007BFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ai_chat_block_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/gradient_bg"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_gallery_block_container">

            <Button
                android:id="@+id/btn_ai_chat"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="152dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button_outline"
                android:minHeight="46dp"
                android:text="AIチャット相談"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="91dp"
                android:src="@drawable/ddddddd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:text="おすすめコーデをAIが提案します!!"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_ai_chat"
                app:layout_constraintEnd_toStartOf="@id/imageView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fortune_block_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/card_block_background"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ai_chat_block_container">

            <ImageView
                android:id="@+id/icon_fortune"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Omikuji Icon"
                android:src="@drawable/baseline_sunny_24"
                android:tint="#FF9800"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_fortune_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="今日のファッション運勢"
                android:textColor="@android:color/black"
                android:textSize="16sp" android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/icon_fortune"
                app:layout_constraintStart_toEndOf="@id/icon_fortune"
                app:layout_constraintTop_toTopOf="@id/icon_fortune" />

            <View
                android:id="@+id/divider_fortune"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_fortune" />

            <TextView
                android:id="@+id/text_omikuji_result"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="start|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:text="ボタンを押して今日のファッション運を占おう！"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_draw_omikuji"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_fortune" />
            <Button
                android:id="@+id/btn_draw_omikuji"
                android:layout_width="wrap_content"
                android:layout_height="40dp" android:backgroundTint="#FF9800"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="占う" android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_omikuji_result"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/text_cooldown_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#FF0000"
                android:textSize="11sp"
                android:visibility="gone"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/btn_draw_omikuji"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/footer_spacer"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/fortune_block_container"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>